{
  "name": "HABERES DJANGO Development",
  "dockerComposeFile": ["./compose.dev.yml"],
  "service": "haberes-devcontainer",
  "workspaceFolder": "/code",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": "true",
      "configureZshAsDefaultShell": "true",
      "username": "vscode",
      "userUid": "1000",
      "userGid": "1000",
      "upgradePackages": "true"
    },
    "ghcr.io/devcontainers/features/node:1": "none"
  },
  // Configure tool-specific properties.
  "customizations": {
    // Configure properties specific to VS Code.
    "vscode": {
      // Set *default* container specific settings.json values on container create.
      "settings": {
        "editor.formatOnSave": true,
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "editor.defaultFormatter": "ms-python.black-formatter",
        "isort.args": ["--profile", "black"],
        "[python]": {
          // "editor.formatOnType": true,
          "editor.formatOnSave": true
        }
      },
      "extensions": [
        "mikestead.dotenv",
        "kisstkondoros.vscode-gutter-preview",
        "vivaxy.vscode-conventional-commits",
        "Gruntfuggly.todo-tree",
        "shardulm94.trailing-spaces",
        "redhat.vscode-yaml",
        "usernamehw.errorlens",
        "ms-azuretools.vscode-docker",
        "damms005.devdb",
        "esbenp.prettier-vscode",
        "ms-python.python",
        "KevinRose.vsc-python-indent",
        "ms-python.black-formatter",
        "ms-python.isort"
      ]
    }
  },
  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  // "forwardPorts": [],
  "forwardPorts": [9000],
  // Comando post-creaci칩n para instalar dependencias
  "postCreateCommand": "pip install -r requirements.txt && pip install -r requirements-dev.txt",

  // Comando post-inicio
  "postStartCommand": "echo 'Devcontainer iniciado! La aplicaci칩n estar치 disponible en http://localhost:8000'",
  // Configuraci칩n de usuario
  "remoteUser": "vscode",
  "containerUser": "vscode",
  "mounts": [
    "source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached"
    // "source=${localEnv:HOME}/.ssh,target=/home/appuser/.ssh,type=bind,consistency=cached"
  ]
}
